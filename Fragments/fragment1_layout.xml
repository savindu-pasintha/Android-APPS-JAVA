<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="Welcome to Fragment1"
        android:id="@+id/textTitle"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnNavFrag1"
        android:text="Go to Fragment1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNavFrag1"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnNavFrag2"
        android:text="Go to Fragment2"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNavFrag2"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnNavFrag3"
        android:text="Go to Fragment3"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNavFrag3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/btnNavSecondActivity"
        android:text="Go to Second Activity"/>

    <!-- below -->
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnNavSecondActivity"
                android:text="This app will assist you in configuring a printer to work with Loyverse POS."/>
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/tv_2"
                android:text="Please follow these three easy steps:"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_1"
                android:layout_width="match_parent"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/tv_3"
                android:text="- Connect your printer"
                android:layout_below="@+id/tv_2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/tv_4"
                android:text="- Print test receipt"
                android:layout_below="@+id/tv_3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/tv_5"
                android:text="- On the test receipt see the most suitable settings for your printer"
                android:layout_below="@+id/tv_4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="16dp"
                android:width="180dp"
                android:background="#039be5"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Continue"
                android:textColor="#212121"
                android:textSize="14sp" />
</RelativeLayout>