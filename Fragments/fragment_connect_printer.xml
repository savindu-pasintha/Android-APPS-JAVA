<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    >
        <Spinner
            android:id="@+id/interfaces_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/interface_array"
            android:layout_weight="1"
            />
        <Spinner android:entries="@array/paper_width"
            android:id="@+id/encoding_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <Spinner android:entries="@array/print_mode"
            android:id="@+id/print_resolution_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <EditText

            android:layout_weight="1"
            android:id="@+id/ip_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:digits="0123456789."
            android:focusableInTouchMode="true"
            android:hint="IP Address"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
        />
        <EditText
            android:id="@+id/bluetooth_mac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:hint="MAC address"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/find_bluetooth_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#039be5"
            android:text="search"
            android:textColor="#ffffff"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/verify_connection_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="verify connection"
            android:layout_margin="2dp"
            android:textColor="#0277BD"
           />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#039be5"
            android:fontFamily="sans-serif-medium"
            android:text="continue"
            android:textColor="#212121"
            android:layout_margin="2dp"
            android:layout_weight="1"
           />




</LinearLayout>
